{{#section 'head'}}
    <link rel="stylesheet" type="text/css" href="/assets/js/DataTables/datatables.min.css"/> 
    <link rel="stylesheet" href="/assets/css/donut.css">
{{/section}}

<div class="container-fluid fill-parent" style="overflow-y: auto;">
    <div class="row py-3"></div>      
    <div id="metrics" class="row mb-3">
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card fill-parent" style="overflow: auto">
                <div class="card-header card-title">Device Collections Overview</div>
                <div class="card-body">
                    <div class="d-flex">
                        <div class="d-inline-block">
                            <div id="collectionCount" style="font-size: 3rem; line-height: 1.25em; font-weight: 600;">0</div>
                            <div style="font-size: .8em; line-height: .9em;">Collections</div>
                        </div>
                        <div class="separator"></div>
                        <div class="d-inline-block">
                            <div id="deviceCount" style="font-size: 3rem; line-height: 1.25em; font-weight: 600;">0</div>
                            <div style="font-size: .8em; line-height: .9em;">Total Devices</div>
                        </div>
                    </div>
                    
                    <table id="tblDevCollOverview" class="card-table">
                        <thead>
                            <th>OS</th>
                            <th>COLLECTIONS</th>
                            <th>TOTAL DEVICES</th>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div id="cardDevByWeek" class="card fill-parent">
                <div class="card-header card-title">Devices By Fiscal Week</div>
                <div class="card-body d-flex">
                    <div class="d3Chart"></div>
                    <div class="d3Legend d-inline-block ml-3"></div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div id="cardUpdateSummary" class="card fill-parent">
                <div class="card-header card-title">Updates Summary</div>
                <div class="card-body d-flex">
                    <div class="d3Chart"></div>
                    <div class="d3Legend d-inline-block ml-3"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">        
        <div class="col">
            <div class="card" style="border:none;">
                    <div class="card-header p-1" style="border: none;">
                        <span style="font-weight: 100; font-size: 1.25rem">Device Collections</span>
                    </div>
                <div class="card-body" style="overflow: hidden; border: 1px solid rgba(0,0,0,.125); border-radius: .25rem;">
                     <table id="deviceCollections" class="table table-sm table-striped">
                        <thead style="font-size: .8rem">
                            <th>Name</th>
                            <th>Maintenance Schedule</th>
                            <th>Devices</th>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'scripts'}}
    <script type="text/javascript" src="/assets/js/DataTables/datatables.min.js"></script>
    <script type="text/javascript" src="https://d3js.org/d3.v4.min.js"></script>
    <script type="text/javascript" src="/assets/js/donut.js"></script>
    <script type="text/javascript" src="/assets/js/donutMod.js"></script>
    <script type="text/javascript" src="/assets/js/devices.js"></script>
{{/section}}