{{#section 'head'}}
    <link rel="stylesheet" type="text/css" href="/assets/js/DataTables/datatables.min.css"/> 
{{/section}}

<div class="container-fluid fill-parent" style="overflow-y: auto;">
    <div class="row mt-3 mb-2">
        <div class="col">
            <h3 id="groupName">Manual Reboot</h3>
        </div>
    </div>      
    <div id="metrics" class="row mb-3">
        <div class="col-sm-12 col-md-6 col-xl-3">
            <div class="card fill-parent mb-3" style="overflow: auto">
                <div class="card-header card-title">Device Collection Overview</div>
                <div class="card-body">
                    <div class="d-flex">
                        <div class="d-inline-block">
                            <div id="deviceCount" style="font-size: 3rem; line-height: 1.25em; font-weight: 600;">0</div>
                            <div style="font-size: .8em; line-height: .9em;">Total Devices</div>
                        </div>
                        <div class="separator"></div>
                        <div class="d-inline-block">
                            <div id="attentionNeeded" style="font-size: 3rem; line-height: 1.25em; font-weight: 600;">0</div>
                            <div style="font-size: .8em; line-height: .9em;">Devices Need Attention</div>
                        </div>
                    </div>
                    
                    <table id="tblAttentionNeeded" class="card-table">
                        <thead>
                            <th>NEEDS ATTENTION</th>
                            <th>DEVICE COUNT</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Updates Failed</td>
                                <td>153</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-xl-4">
            <div class="card fill-parent">
                <div class="card-header card-title">Updates Status</div>
                <div class="card-body d-flex">
                    <svg width="50%" viewBox="0 0 5 5">
                        <rect x="0" y="0" width="5" height="5" />
                    </svg>
                    <div class="d-inline-block ml-3">
                        <div style="border-left: 5px solid #009e49; margin-bottom: 6px;">
                            <div style="padding-left:6px;">
                                <div style="font-size: .7em; line-height: .9em;">INSTALLED</div>
                                <div style="font-size: 1.25em; line-height: 1em; font-weight: 600;">0</div>
                            </div>
                        </div>
                        <div style="border-left: 5px solid #ff8c00; margin-bottom: 6px;">
                            <div style="padding-left:6px;">
                                <div style="font-size: .7em; line-height: .9em;">NEEDED</div>
                                <div style="font-size: 1.25em; line-height: 1em; font-weight: 600;">0</div>
                            </div>
                        </div>
                        <div style="border-left: 5px solid #28B9F5; margin-bottom: 6px;">
                            <div style="padding-left:6px;">
                                <div style="font-size: .7em; line-height: .9em;">DOWNLOADED</div>
                                <div style="font-size: 1.25em; line-height: 1em; font-weight: 600;">0</div>
                            </div>
                        </div>
                        <div style="border-left: 5px solid #512bd4; margin-bottom: 6px;">
                            <div style="padding-left:6px;">
                                <div style="font-size: .7em; line-height: .9em;">PENDING</div>
                                <div style="font-size: 1.25em; line-height: 1em; font-weight: 600;">0</div>
                            </div>
                        </div>
                        <div style="border-left: 5px solid #e81123; margin-bottom: 6px;">
                            <div style="padding-left:6px;">
                                <div style="font-size: .7em; line-height: .9em;">FAILED</div>
                                <div style="font-size: 1.25em; line-height: 1em; font-weight: 600;">0</div>
                            </div>
                        </div>
                        <div style="border-left: 5px solid #000000; margin-bottom: 6px;">
                            <div style="padding-left:6px;">
                                <div style="font-size: .7em; line-height: .9em;">STATUS UNKNOWN</div>
                                <div style="font-size: 1.25em; line-height: 1em; font-weight: 600;">0</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">        
        <div class="col">
            <div class="card" style="border:none;">
                    <div class="card-header p-1" style="border: none;">
                        <span style="font-weight: 100; font-size: 1.25rem">Devices</span>
                    </div>
                <div class="card-body" style="overflow: hidden; border: 1px solid rgba(0,0,0,.125); border-radius: .25rem;">
                     <table id="devices" class="table table-sm table-striped">
                        <thead style="font-size: .8rem">
                            <th>HOSTNAME</th>
                            <th>OS</th>
                            <th>BUSINESS</th>
                            <th width="60px">INSTALLED</th>
                            <th width="60px">NEEDED</th>
                            <th width="60px">DOWNLOADED</th>
                            <th width="60px">PENDING</th>
                            <th width="60px">FAILED</th>
                            <th width="60px">UNKNOWN</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>CTS2012R2D1</td>
                                <td>Windows Server 2012 R2</td>
                                <td>GE Digital</td>
                                <td>50</td>
                                <td>0</td>
                                <td>0</td>
                                <td>22</td>
                                <td>5</td>
                                <td>0</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'scripts'}}
    <script type="text/javascript" src="/assets/js/DataTables/datatables.min.js"></script>
    <script type="text/javascript" src="/assets/js/deviceGroup.js"></script>
{{/section}}